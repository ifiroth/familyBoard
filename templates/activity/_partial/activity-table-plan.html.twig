{% if activity is defined and activity.id in forms|keys %}
    {% set form = forms[activity.id] %}
{% else %}
    {% set form = emptyForm %}
{% endif %}

{{ form_errors(form) }}

{{ form_start(form)}}

<div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault">Evenement hebdomadaire</label>
</div>

{{ form_row(form) }}

<input type="submit">

{{ form_end(form) }}
