<nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% for key, link in links %}
                    {% if link is iterable %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle{% if link == action %} active{% endif %}" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                {{ key }}
                            </a>
                            <ul class="dropdown-menu">
                                {% for sublink in link %}
                                    <li><a class="dropdown-item" href="{{ path(action) }}">{{ sublink }}</a></li>
                                {%  endfor %}
                            </ul>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link{% if link == action %} active{% endif %}" aria-current="page" href="{{ path(action) }}">
                                {{ link }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>
